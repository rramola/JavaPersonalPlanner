Query 1: Retrieve all bills for a specific user by id

SELECT b.id, b.title, b.amount, b.dueDate, b.isPaid
FROM bills b
JOIN users u ON b.userId = u.id
WHERE u.id = userId

Query 2: Retrieve all upcoming calendar events for a specific user by id

SELECT ce.id, ce.title, ce.eventDescription, ce.eventDate, ce.eventLocation
FROM calendar_events ce
JOIN users u ON ce.userId = u.id
WHERE u.id = userId AND ce.eventDate > CURRENT_DATE;

Query 3: Retrieve all to-do items for a specific user by id

SELECT ti.id, ti.title, ti.todoDescription, ti.isCompleted
FROM todo_items ti
JOIN users u ON ti.userId = u.id
WHERE u.id = userId

Query 4: Retrieve all unpaid bills for a specific user by id

SELECT b.id, b.title, b.amount, b.dueDate
FROM bills b
JOIN users u ON b.userId = u.id
WHERE u.id = userId AND b.isPaid = FALSE;

Query 5: Retrieve all completed to-do items for a specific user by id

SELECT ti.id, ti.title, ti.todoDescription
FROM todo_items ti
JOIN users u ON ti.userId = u.id
WHERE u.id = userId AND ti.isCompleted = TRUE;
